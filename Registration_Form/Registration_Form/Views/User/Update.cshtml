@model Registration_Form.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update User</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
        }

        #container {
            max-width: 600px;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px black;
            margin: auto;
        }

        h1 {
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"], input[type="email"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .btn {
            display: block;
            width: 100%;
            padding: 10px;
            background: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            .btn:hover {
                background: #0056b3;
            }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div id="container">
        <h1>Update User</h1>
        <hr>
        <form action="" method="POST">
            <div class="form-group">
                <input type="hidden" value="@Model.UserId" name="UserId">
            </div>
            <div class="form-group">
                <label>First Name</label>
                <input type="text" value="@Model.FirstName" name="FirstName">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" value="@Model.LastName" name="LastName">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" value="@Model.Email" name="Email">
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input type="text" value="@Model.PhoneNumber" name="PhoneNumber">
            </div>
            <div class="form-group">
                <label>Street Address</label>
                <input type="text" value="@Model.StreetAddress" name="StreetAddress">
            </div>
            <div class="form-group">
                <label>State Name</label>
                <input type="text" value="@Model.StateName" name="StateName">
            </div>
            <div class="form-group">
                <label>Country Name</label>
                <input type="text" value="@Model.CountryName" name="CountryName">
            </div>
            <div class="form-group">
                <label>Area Code</label>
                <input type="text" value="@Model.AreaCode" name="AreaCode">
            </div>
            <button type="submit"  class="btn">Update</button>
        </form>
        <a href="Index" class="back-link">Back to List</a>
    </div>
</body>
</html>
